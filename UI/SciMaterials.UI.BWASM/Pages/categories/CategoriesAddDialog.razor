<EditForm Model="@AddCategoryModel" OnValidSubmit="@OnSaveClickAsync">
    <MudDialog>
        <TitleContent>
            <MudText Typo="Typo.h6">
                <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                Add new Category
            </MudText>
        </TitleContent>
        <DialogContent>
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField  @bind-Value="@AddCategoryModel.Name" Label="Name" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField  @bind-Value="@AddCategoryModel.Description" Label="Description" />
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Warning" OnClick="OnCancelClick">Cancel</MudButton>
            <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success">Save</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>